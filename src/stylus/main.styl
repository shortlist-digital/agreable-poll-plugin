@import 'nib'

.pulse
  animation-name: pulse;
  animation-duration: 1s;
  animation-fill-mode: both;

.fadeOutUp
  animation-name: fadeOutUp;
  animation-duration: 1s;
  animation-fill-mode: both;

@keyframes pulse {
  0% {
    transform: scale3d(1, 1, 1);
  }
  50% {
    transform: scale3d(1.05, 1.05, 1.05);
  }
  100% {
    transform: scale3d(1, 1, 1);
  }
}

@keyframes fadeOutUp {
  0% {
    opacity: 1;
  }
  100% {
    opacity: 0;
    transform: translate3d(0, -100%, 0);
  }
}

.senti-poll
  border-top #dcdcdc 1px solid
  padding-top 32px
  margin auto

.senti-poll-question
  text-align center
  margin-bottom 20px

.senti-poll-answers
  margin-bottom 40px

.senti-poll-votes-so-far
  text-align center
  font-size 24px
  font-weight bold
  color #1a1a1a
  margin-bottom 20px

.senti-poll-progress-bar
  text-align center

.senti-poll-progress-text
  padding 10px 0px

.senti-poll-social-prompt
  text-align center

.senti-poll-option
  font-size: 18px
  font-weight 100

.btn
  &.senti-poll-sharing-button
    border-radius 0px !important
    text-transform uppercase
    display block
    float left
    width 33.3333333333%
    border none
    color #fff
    font-size 14px
    letter-spacing 0.1em
    padding 0px
    line-height 2em
  &.senti-poll-vote-button
    border-radius 10px !important
    border 0 none
    height auto
    padding 10px
    line-height 1.3
    cursor pointer

@media (min-width: 480px)
  .btn.senti-poll-sharing-button
    font-size 16px
    letter-spacing 0.19em

.no-fadeOutUp,
.fadeOutUp
  float right

.no-fadeOutUp
  display none

.fadeOutUp
  display inline

.senti-poll-button-wrapper
  position relative
  div
    position absolute
    top 50%
    right 15px
    transform translateY(-50%)
    line-height 1
    color inherit

.senti-poll-sharing-facebook
  background-color #3b5999
  &:hover
    background-color #293e6b

.senti-poll-sharing-twitter
  background-color #55acee
  &:hover
    background-color #157ece

.senti-poll-sharing-google
  background-color #dd4b39
  &:hover
    background-color #a62c1d

.senti-poll-prompt
  text-align center
  display block

.senti-poll-quote
  font-size 24px
  margin-top 20px
  margin-bottom 20px
  text-align center
  line-height 1.3
  -webkit-font-smoothing antialiased

@media (min-width: 768px)
  .senti-poll-quote
    font-size 34px

.senti-poll-bold
  font-weight bold

.senti-poll-share-row
  overflow hidden
  margin-bottom 20px
  max-width 500px
  margin auto

.question-to-answer
  opacity 0
  transition all 1s ease-in

.question-to-answer-enter-active
  transition all 1s ease-in
  opacity 1

.question-to-answer-leave-active
  transition all 1s ease-in
  opacity 0

.senti-poll-sharing-wrapper
  position relative
  margin 40px auto
  transition all 0.5s ease-out
  &.hide-wrapper
    height 0
    opacity 0
  &.show-wrapper
    height auto !important
    opacity 1
    min-height 320px

.senti-poll-sharing-content
  width: 100%
  position absolute
  top 50%
  transform translateY(-50%)

.senti-poll-bfc
  position absolute
  left 50%
  transform translateX(-50%)
  background #eaeaea
  padding-right 320px
  height 100%
  border-radius 100%

.triangle-border
  position relative
  padding 15px
  margin 1em 0 3em
  border 3px solid #232323
  border-radius 10px
  margin-left 30px
  &:before
    top 10px
    bottom auto
    left -30px
    border-width 15px 30px 15px 0
    border-color transparent #5a8f00
  &:after
    top 16px
    bottom auto
    left -21px
    border-width 11px 21px 11px 0
    border-color transparent #fff

