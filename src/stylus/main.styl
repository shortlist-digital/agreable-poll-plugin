/* Module/Block: Answer Info */
.answer-information
  opacity 0
  transition: opacity 1s;

.answer-information
  display: none;
  position: relative;
  top: -30px;
  margin-left: 10px;
  margin-right: 10px;
  background: rgb(234, 234, 234);
  color: black;
  padding: 10px;
  font-family: Georgia,serif;
  text-transform: none;
  font-size: 16px;
  box-shadow: 0px 5px 24px -7px rgba(10, 8, 8, 0.53);

.answer-information:before
  content: '';
  position: absolute;
  left: 50%;
  margin-left: -10px;
  height: 20px;
  width: 20px;
  /* -webkit-transform: rotateY(180deg); */
  transform: rotateZ(45deg);
  background: rgb(234, 234, 234);
  top: -10px;

.quiz-complete .answer-information
  display: block;

.answer-information.is-revealed
  opacity 1

